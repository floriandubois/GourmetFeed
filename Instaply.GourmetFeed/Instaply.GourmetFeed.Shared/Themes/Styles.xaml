<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Instaply.GourmetFeed.Themes"
    xmlns:converters="using:Instaply.GourmetFeed.Common.Converters">

    <converters:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <SolidColorBrush x:Key="GourmetFeedOrange" Color="#FFFEAD46"/>
    <SolidColorBrush x:Key="GourmetFeedTransparencyOrange" Color="#CCFEAD46"/>
    <SolidColorBrush x:Key="GourmetFeedInnerOrange" Color="#FFFFC57A"/>
    <SolidColorBrush x:Key="GourmetFeedForegroundGray" Color="#FF585858"/>
    <SolidColorBrush x:Key="GourmetFeedGreenLight" Color="#5cb85c"/>
    <SolidColorBrush x:Key="GourmetFeedGreenDark" Color="#4cae4c"/>
    
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource GourmetFeedForegroundGray}"></Setter>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Foreground="{StaticResource GourmetFeedForegroundGray}" Text="{Binding}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Foreground" Value="{StaticResource GourmetFeedForegroundGray}"></Setter>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Foreground="{StaticResource GourmetFeedForegroundGray}" Text="{Binding}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TitleGourmet" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="FontFamily" Value="Assets/Fonts/5455bfd4.clairehandbold-webfont.ttf#Claire Hand"></Setter>
        <Setter Property="FontSize" Value="66"></Setter>
        <Setter Property="Text" Value="GOURMET"></Setter>
    </Style>

    <Style x:Key="TitleSlogan" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="FontFamily" Value="Assets/Fonts/5455bfd4.clairehandbold-webfont.ttf#Claire Hand"></Setter>
        <Setter Property="FontSize" Value="34"></Setter>
        <Setter Property="Text" Value="THE FOOD LOG"></Setter>
    </Style>

    <ImageBrush x:Key="BackgroundImageBrush"
                                ImageSource="../Assets/bg.jpg"
                                Opacity="0.8"
                                Stretch="UniformToFill" />
    
</ResourceDictionary>
